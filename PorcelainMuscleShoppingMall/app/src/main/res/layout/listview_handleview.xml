<?xml version="1.0" encoding="utf-8"?>
<com.view.widget.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#FF9999"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:background="@drawable/returns"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        <TextView
            android:textColor="#ecf0f1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品详情"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <com.view.widget.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/details_topimages"
                android:src="@drawable/q1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="40%" />
            <android.support.percent.PercentRelativeLayout
                android:background="#FF6600"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="15%">

                <TextView
                    android:textSize="18sp"
                    android:text="商品名称"
                    android:gravity="center_vertical"
                    android:id="@+id/details_name"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentLeft="true"
                    app:layout_widthPercent="65%"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%"/>
                <LinearLayout

                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/details_name"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/price"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/details_price"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="价格"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%">
                    <ImageView
                        android:id="@+id/details_collection_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/collection"/>
                    <TextView
                        android:id="@+id/details_collection"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收 藏"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <TextView
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/kuaidi"
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="顺丰快递"/>
                <TextView
                    android:gravity="right"
                    android:id="@+id/yunfei"
                    android:text="包邮"
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/kuaidi"
                    android:layout_alignLeft="@+id/kuaidi"/>
            </android.support.percent.PercentRelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="10%"
                android:background="#009cff"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dip"
                    android:text="送至"
                    android:textColor="#cccccc"
                    android:textSize="20sp" />
                <LinearLayout
                    android:id="@+id/buy_ctiy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dip"
                        android:text="广东省>清远市>清城区>城区"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:text="现货，现在下单，预计明天中午到达"
                        android:textColor="#bab9b9"
                        android:textSize="12sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="30dip"
                    android:src="@drawable/icoo"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="8%"
                android:gravity="center|left"
                android:text="评论:"/>

        </com.view.widget.PercentLinearLayout>
</ScrollView>
</com.view.widget.PercentLinearLayout>
