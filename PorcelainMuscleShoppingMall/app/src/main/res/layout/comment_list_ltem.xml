<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/comment_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="125dp" />
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/comment_tv1"
            android:textSize="15sp"
            android:layout_alignTop="@+id/comment_icon"
            android:layout_toRightOf="@+id/comment_icon"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/comment_tv2"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/comment_tv1"
            android:layout_below="@+id/comment_tv1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/comment_tv3"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/comment_tv2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:text="15sp"
        android:id="@+id/comment_content"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
