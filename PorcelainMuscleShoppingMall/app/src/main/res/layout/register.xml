<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_icon"
   >
<ImageView
    app:layout_marginTopPercent="10%"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/logo"/>
<RelativeLayout
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:layout_marginTopPercent="30%"
    android:id="@+id/register1"
    android:layout_width="match_parent"
    android:layout_height="55dp">
      <EditText
           android:maxLines="1"
          android:textColorHint="@android:color/holo_blue_bright"
          android:hint="用户名"
          android:paddingBottom="8dp"
          android:paddingLeft="40dp"
          android:background="@null"
          android:layout_alignParentBottom="true"
          android:id="@+id/username"
          android:layout_width="match_parent"
          android:layout_height="40dp" />

       <View
           android:background="#1f7cee"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_alignParentBottom="true"/>
      <ImageView
          android:layout_marginBottom="8dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:id="@+id/usericon"
          android:background="@drawable/username"
          android:layout_width="35dp"
          android:layout_height="35dp" />

</RelativeLayout>
      <RelativeLayout

          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:layout_marginTop="8dp"
          android:layout_below="@+id/register1"
          android:id="@+id/register2"
          android:layout_width="match_parent"
          android:layout_height="55dp">


            <EditText
                android:maxLines="1"
                android:textColorHint="@android:color/holo_blue_bright"
                android:hint="设置你的密码"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <View
                android:background="#1f7cee"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/password"
                android:layout_width="35dp"
                android:layout_height="35dp" />

      </RelativeLayout>


      <RelativeLayout

          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:layout_marginTop="8dp"
          android:layout_below="@+id/register2"
          android:id="@+id/register3"
          android:layout_width="match_parent"
          android:layout_height="55dp">


            <EditText
                android:textColorHint="@android:color/holo_blue_bright"
                android:hint="请输入的号码"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <View
                android:background="#1f7cee"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/phone"
                android:layout_width="35dp"
                android:layout_height="35dp" />

      </RelativeLayout>




      <android.support.percent.PercentRelativeLayout
                android:id="@+id/register4"
                android:layout_below="@+id/register3"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">


                  <EditText
                      android:textColorHint="@android:color/holo_blue_bright"
                      android:hint="输入获取到的验证码 "
                      android:paddingLeft="40dp"
                      android:paddingBottom="10dp"
                      android:background="@null"
                      android:layout_alignParentBottom="true"
                      android:id="@+id/verificationcode"
                      android:layout_width="0dp"
                      app:layout_widthPercent="65%"
                      android:layout_height="40dp" />

                  <View
                      android:id="@+id/v1"
                      android:background="#1f7cee"
                      android:layout_width="0dp"
                      app:layout_widthPercent="65%"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"/>
                  <ImageView

                      android:layout_marginBottom="10dp"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentBottom="true"
                      android:background="@drawable/verificationcode"
                      android:layout_width="35dp"
                      android:layout_height="35dp" />
                <Button
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:id="@+id/Codebutton"
                    android:minLines="1"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:background="#cb4258fd"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="35dp"/>
            </android.support.percent.PercentRelativeLayout>
      <Button
          android:id="@+id/registerbutton"
          android:text="注册"
          android:layout_marginTop="16dp"
          android:layout_below="@+id/register4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#b24258fd"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"/>
</android.support.percent.PercentRelativeLayout>
