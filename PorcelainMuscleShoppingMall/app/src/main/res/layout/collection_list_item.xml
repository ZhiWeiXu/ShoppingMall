<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/collection_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/collection_tv1"
            android:textSize="15sp"
            android:layout_alignTop="@+id/collection_icon"
            android:layout_toRightOf="@+id/collection_icon"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/collection_tv2"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/collection_tv1"
            android:layout_below="@+id/collection_tv1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/collection_tv3"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/collection_tv2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>

</LinearLayout>
